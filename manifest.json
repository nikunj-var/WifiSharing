{
  "manifest_version": 3,
  "name": "WiFi File Share",
  "version": "1.0",
  "description": "Share files between devices connected to the same WiFi",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["ws://localhost:3000/"],
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "background",
    "notifications"
  ]
}
